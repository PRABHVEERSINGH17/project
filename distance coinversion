#include<stdio.h>
int main(){
  float km,m,cm,inch,ft;
  printf("Enter the distance in kilometers:");
  scanf("%f",&km);
  m=km*1000;
  cm=m*100;
  inch=cm/2.54;
  ft=inch/12;
  printf("Distance in meters=%f\n",m);
  printf("DIStance in cm=%f\n",cm);
  printf("Distance in inches=%f\n",inch);
  printf("DIstance in feet=%f\n",ft);
  return 0;
}
Enter the distance in kilometers:10
Distance in meters=10000.000000
DIStance in cm=1000000.000000
Distance in inches=393700.781250
DIstance in feet=32808.398438
 
