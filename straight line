#include<stdio.h>
#include<math.h>
void main(){
  int x1,x2,x3,y1,y2,y3;
  int s1,s2,s3;
  printf("Enter the values of x1 and y1.cooridinates of first point\n");
  scanf("%d %d",&x1,&y1);
  printf("enter the values of x2 and y2.cooridinates of second point\n");
  scanf("%d %d",&x2,&y2);
  printf("Enter the cooridinates x3 and y3.cooridinates of third point\n");
  scanf("%d %d",&x3,&y3);
  s1=x2-x1/y2-y1;
  printf("s1=%d\n",s1);
  s2=x3-x1/y3-y1;
  printf("s2=%d\n",s2);
  s3=x3-x2/y3-y2;
printf("s3=%d\n",s3);
  if(s1==s2&& s2==s3)
printf("Points are collinear\n");
else
    printf("Points are not collinear\n");
}
